/* pages/card/card.wxss */
.bg{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1;
}
.bg image{
    width: 100%;
    height: 100%;
}
.content{
    position: fixed;
    z-index: 2;
    width: 100%;
}
.content>view:first-child{
    text-align: center;
    margin-top: 132rpx;
}
.content>view:nth-child(2){
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 250rpx;
    margin-left: 20rpx;
}
.arrLeft, .arrRight{
    width: 84rpx;
    height: 84rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.arrLeft{
    transform:rotate(-180deg);
}
.logo{
    width: 454rpx;
    height: 290rpx;
}
.btn{
    width: 380rpx;
    height: 80rpx;
    border: 1rpx dotted #fff;
    color:#fff;
    margin:  0 auto;
    text-align: center;
    line-height: 80rpx;
    font-size: 42rpx;
    margin-top: 150rpx;
}
